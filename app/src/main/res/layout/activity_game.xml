<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Game"
    android:background="#ffffff">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff4141"
        android:id="@+id/lilaG"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/title"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/namAutG"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_weight="0.33" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_weight="0.04" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:textAlignment="center"
            android:id="@+id/namSongG"
            android:gravity="center"

            android:textSize="20dp"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_weight="0.33" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/question"
        android:id="@+id/tvQu"
        android:visibility="invisible"
        android:layout_below="@+id/lilaG"
        android:layout_centerHorizontal="true" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tPolsat"
        android:textSize="1dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gaming"
        android:textColor="#2e2e2e"
        android:textSize="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="3"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/timer"
        android:textSize="50dp"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/gaming"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/pushed"
        android:textColor="#000"
        android:textSize="50dp"
        android:layout_below="@+id/gaming"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="25dp"
        android:id="@+id/plusTime"
        android:layout_alignTop="@+id/timer"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splashyGame"
        android:src="@drawable/load"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/timer"
        android:layout_alignEnd="@+id/timer" />
</RelativeLayout>
